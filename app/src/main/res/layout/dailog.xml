<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/dailob_backoung">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@drawable/dailog">

        <TextView
            android:id="@+id/main_zt_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="#FFDC2316"
            android:textSize="28dp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/main_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:orientation="vertical">

        <RelativeLayout
            style="@style/RelativeLayout_42">
            <TextView
                style="@style/TextView_16dp"
                android:text="门票号："
                android:layout_alignParentLeft="true"
                />
            <TextView
                android:id="@+id/main_title_tv"
                style="@style/TextView_16dp"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FFF9F7F7" />

        <RelativeLayout
            style="@style/RelativeLayout_42">
            <TextView
                style="@style/TextView_16dp"
                android:text="姓名："
                android:layout_alignParentLeft="true"
                />
            <TextView
                android:id="@+id/main_name_tv"
                style="@style/TextView_16dp"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FFF9F7F7" />

        <RelativeLayout
            style="@style/RelativeLayout_42">
            <TextView
                style="@style/TextView_16dp"
                android:text="电话："
                android:layout_alignParentLeft="true"
                />
            <TextView
                android:id="@+id/main_phone_tv"
                style="@style/TextView_16dp"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FFF9F7F7" />
        <RelativeLayout
            style="@style/RelativeLayout_42">
            <TextView
                style="@style/TextView_16dp"
                android:text="参会号："
                android:layout_alignParentLeft="true"
                />
            <TextView
                android:id="@+id/main_ma_tv"
                style="@style/TextView_16dp"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FFF9F7F7" />

        <RelativeLayout
            style="@style/RelativeLayout_42">
            <TextView
                style="@style/TextView_16dp"
                android:text="扫码次数："
                android:layout_alignParentLeft="true"

                />

            <TextView
                android:id="@+id/main_nums_tv"
                style="@style/TextView_16dp"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FFF9F7F7" />

        <Button
            android:id="@+id/dailog_btn"
            android:layout_width="128dp"
            android:layout_height="42dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/btn_backoung"
            android:text="确定"
            android:textColor="#fff"
            android:textSize="20dp" />
    </LinearLayout>
</LinearLayout>